\DeclareDocumentCommand \der {o m m}
{
  \IfNoValueTF {#1}
  {\frac{\diff #2}{\diff #3}}
  {\frac{\diff^#1 #2}{\diff^#1 #3}}
}

\DeclareDocumentCommand \pder {o m m}
{
  \IfNoValueTF {#1}
  {\frac{\partial #2}{\partial #3}}
  {\frac{\partial^#1 #2}{\partial^#1 #3}}
}


